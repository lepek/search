<div class="table-responsive">
  <table id="search-results-table" class="table table-striped" cellspacing="0" width="100%">
    <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Designed by</th>
    </tr>
    </thead>
    <tbody>
      <% @results.each do |result| %>
        <tr>
          <td><%= result[:name] %></td>
          <td><%= result[:kind] %></td>
          <td><%= result[:designed_by] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>